{
  "definitions": [
    {
      "title": "Airport Overview",
      "id": "airport-overview",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Airport Overview",
              "model": "airport-overview",
              "filter": "airport-overview"
            }
          }
        }
      }
    },
    {
      "title": "Airport Overview Item",
      "id": "airport-overview-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Airport Overview Item",
              "model": "airport-overview-item"
            }
          }
        }
      }
    }
  ],

  "models": [
    {
      "id": "airport-overview",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "title",
          "label": "Section Title"
        },
        {
          "component": "richtext",
          "valueType": "string",
          "name": "description",
          "label": "Section Description"
        },

        {
          "component": "text",
          "valueType": "string",
          "name": "tabs",
          "multi": true,
          "label": "Airport Tabs",
          "description": "Add the airport names to appear at the top navigation (e.g. Delhi Airport, Hyderabad Airport, Goa Airport...)."
        },

        {
          "component": "text",
          "valueType": "string",
          "name": "activeTab",
          "label": "Active Tab",
          "description": "Enter the tab name that should be highlighted by default."
        },

        {
          "component": "select",
          "valueType": "string",
          "name": "selectorType",
          "label": "Airport Type Selector",
          "options": [
            { "name": "Domestic", "value": "domestic" },
            { "name": "International", "value": "international" }
          ],
          "value": "domestic"
        },

        {
          "component": "text",
          "valueType": "string",
          "name": "selectorLabel",
          "label": "Selector Label",
          "description": "Optional text label for the selector dropdown."
        }
      ]
    },

    {
      "id": "airport-overview-item",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "statNumber",
          "label": "Statistic Number",
          "description": "Example: 79M+, 150+, 4"
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "statLabel",
          "label": "Statistic Label",
          "description": "Example: Passengers handled annually"
        }
      ]
    }
  ],

  "filters": [
    {
      "id": "airport-overview",
      "components": ["airport-overview-item"]
    }
  ]
}
