{
  "title": "Footer Topbar",
  "description": "Top bar of footer: logo, social icons, button",
  "type": "object",
  "properties": {
    "logo": {
      "type": "string",
      "title": "Logo Image URL"
    },

    "social": {
      "type": "array",
      "title": "Social Icons",
      "items": {
        "type": "object",
        "properties": {
          "icon": { "type": "string", "title": "Icon (SVG/Text)" },
          "url": { "type": "string", "title": "Icon Link URL" }
        }
      }
    },

    "buttonLabel": {
      "type": "string",
      "title": "Button Label",
      "default": "Group Websites"
    },

    "buttonIcon": {
      "type": "string",
      "title": "Button Icon",
      "default": "+"
    }
  }
}
