{
  "title": "Footer Topbar",
  "description": "Top bar of footer: logo, social icons, button",
  "type": "object",
  "properties": {
    "logo": {
      "type": "string",
      "title": "Logo Image URL"
    },

    "social": {
      "type": "array",
      "title": "Social Icons",
      "items": {
        "type": "object",
        "properties": {
          "icon": { "type": "string", "title": "Icon (SVG/Text)" },
          "url": { "type": "string", "title": "Link URL" },
          "bgColor": {
            "type": "string",
            "title": "Background Color",
            "default": "#85a1bd"
          },
          "iconColor": {
            "type": "string",
            "title": "Icon Color",
            "default": "#ffffff"
          },
          "size": {
            "type": "string",
            "title": "Icon Size (px)",
            "default": "16"
          }
        }
      }
    },

    "buttonLabel": {
      "type": "string",
      "title": "Button Label",
      "default": "Group Websites"
    },

    "buttonIcon": {
      "type": "string",
      "title": "Button Icon",
      "default": "+"
    }
  }
}
