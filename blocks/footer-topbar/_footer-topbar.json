{
  "title": "Footer Topbar",
  "description": "Fully authorable topbar with logo, social icons, styles & button",
  "type": "object",
  "properties": {
    "logo": {
      "type": "string",
      "title": "Logo Image URL"
    },

    "social": {
      "type": "array",
      "title": "Social Icons",
      "items": {
        "type": "object",
        "properties": {
          "icon": { "type": "string", "title": "Icon (SVG/Text)" },
          "url": { "type": "string", "title": "Link URL" },
          "bgColor": {
            "type": "string",
            "title": "Background Color",
            "default": "#85a1bd"
          },
          "iconColor": {
            "type": "string",
            "title": "Icon Color",
            "default": "#ffffff"
          },
          "size": {
            "type": "string",
            "title": "Icon Size (px)",
            "default": "16"
          }
        }
      }
    },

    "buttonLabel": {
      "type": "string",
      "title": "Button Label",
      "default": "Group Websites"
    },

    "buttonIcon": {
      "type": "string",
      "title": "Button Icon",
      "default": "+"
    },

    "buttonLink": {
      "type": "string",
      "title": "Button Link (Optional)"
    },

    "buttonBgColor": {
      "type": "string",
      "title": "Button Background Color",
      "default": "#fbb040"
    },

    "buttonTextColor": {
      "type": "string",
      "title": "Button Text Color",
      "default": "#000000"
    },

    "buttonIconBgColor": {
      "type": "string",
      "title": "Button Icon Background",
      "default": "#000000"
    },

    "buttonIconColor": {
      "type": "string",
      "title": "Button Icon Color",
      "default": "#ffffff"
    },

    "backgroundColor": {
      "type": "string",
      "title": "Topbar Background Color",
      "default": "#06356b"
    },

    "padding": {
      "type": "string",
      "title": "Padding (CSS syntax)",
      "default": "15px 40px"
    },

    "logoHeight": {
      "type": "string",
      "title": "Logo Height (px)",
      "default": "40"
    },

    "gap": {
      "type": "string",
      "title": "Gap Between Elements (px)",
      "default": "20"
    }
  }
}
