{
  "title": "Footer Topbar",
  "description": "Top portion of footer with logo, social icons & group websites button",
  "type": "object",
  "properties": {
    "logo": {
      "type": "string",
      "title": "Logo Image URL"
    },
    "social": {
      "type": "array",
      "title": "Social Icons",
      "items": {
        "type": "object",
        "properties": {
          "icon": { "type": "string", "title": "Icon (SVG/text)" },
          "url": { "type": "string", "title": "Link URL" }
        }
      }
    },
    "buttonLabel": {
      "type": "string",
      "title": "Button Label",
      "default": "Group Websites"
    },
    "buttonLink": {
      "type": "string",
      "title": "Button Link (Optional)"
    }
  }
}
