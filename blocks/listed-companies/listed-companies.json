{
  "id": "listed-companies",
  "title": "Listed Companies Section",
  "type": "object",
  "properties": {
    "sectionTitle": {
      "type": "text",
      "title": "Section Title"
    },
    "sectionDescription": {
      "type": "text",
      "title": "Section Description"
    },
    "ctaText": {
      "type": "text",
      "title": "CTA Button Text"
    },
    "ctaLink": {
      "type": "text",
      "title": "CTA Button URL"
    },
    "cards": {
      "type": "array",
      "title": "Company Cards",
      "items": {
        "type": "object",
        "properties": {
          "companyName": { "type": "text", "title": "Company Name" },
          "dateTime": { "type": "text", "title": "Date & Time" },
          "nsePrice": { "type": "text", "title": "NSE Price" },
          "nseChange": { "type": "text", "title": "NSE Change" },
          "nseUpDown": {
            "type": "select",
            "enum": ["up", "down"],
            "default": "up",
            "title": "NSE Trend"
          },
          "bsePrice": { "type": "text", "title": "BSE Price" },
          "bseChange": { "type": "text", "title": "BSE Change" },
          "bseUpDown": {
            "type": "select",
            "enum": ["up", "down"],
            "default": "up",
            "title": "BSE Trend"
          },
          "volume": { "type": "text", "title": "Volume" },
          "image": { "type": "image", "title": "Company Image" }
        }
      }
    }
  }
}
